pipeline {
    agent {
        docker { 
            image 'python:3.10-slim' 
            args '-u root:root'  // optional: run as root to install packages
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/bhagyajkumar/jenkins-learn.git'
            }
        }

        stage('Check Python') {
            steps {
                sh '''
                echo "Python version:"
                python --version
                pip --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                if [ -f requirements.txt ]; then
                    echo "Installing dependencies..."
                    pip install --upgrade pip
                    pip install -r requirements.txt
                else
                    echo "No requirements.txt found, skipping..."
                fi
                '''
            }
        }

        stage('Run Python Script') {
            steps {
                sh '''
                if [ -f main.py ]; then
                    echo "Running main.py..."
                    python main.py
                else
                    echo "No main.py found, running demo Hello World..."
                    echo "print('Hello from Docker!')" > hello.py
                    python hello.py
                fi
                '''
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
        }
    }
}
